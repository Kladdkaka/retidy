{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES5",
        "sourceMap": true,
        "lib": [
            "es2019",
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "pretty": true,
        "newLine": "LF",
        "downlevelIteration": true,
    },
    "include": [
        "src/*",
        "src/**/*.json"
    ],
}